@model IEnumerable<Comp2139_Assignment1.Models.Orders>

@{
    ViewData["Title"] = "Order List";
}

<h1>@ViewData["Title"]</h1>

<table class="table">
    <thead>
    <tr>
        <th>Order Date</th>
        <th>Customer Name</th>
        <th>Shipping Address</th>
        <th>Items</th>
        <th>Actions</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var order in Model)
    {
        <tr>
            <td>@order.OrderDate</td>
            <td>@order.CustomerName</td>
            <td>@order.ShippingAddress</td>
            <td>
                @foreach (var item in order.OrderItems)
                {
                    <div>@item.Product.Name - @item.Quantity</div>
                }
            </td>
            <td>
                <a href="@Url.Action("Edit", "Orders", new { id = order.Id })" class="btn btn-warning">Edit</a>
                <a href="@Url.Action("Delete", "Orders", new { id = order.Id })" class="btn btn-danger">Delete</a>
            </td>
        </tr>
    }
    </tbody>
</table>

<a href="@Url.Action("Create", "Orders")" class="btn btn-success">Create New Order</a>