@model Comp2139_Assignment1.Models.Product

@{
    ViewData["Title"] = "Delete Product";
}

<h1>@ViewData["Title"]</h1>

<h3>Are you sure you want to delete this product?</h3>
<p>
    <strong>Name:</strong> @Model.Name <br />
    <strong>Description:</strong> @Model.Description <br />
    <strong>Category:</strong> @Model.Category.Name <br />
    <strong>Quantity:</strong> @Model.Quantity <br />
    <strong>Price:</strong> @Model.Price
</p>

<form method="post">
    <button type="submit" class="btn btn-danger">Delete</button>
    <a href="@Url.Action("Index", "Inventory")" class="btn btn-secondary">Cancel</a>
</form>